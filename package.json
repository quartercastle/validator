{
  "name": "@specla/validator",
  "version": "1.0.0-1",
  "homepage": "https://github.com/Specla/Validator#readme",
  "description": "Super fast, 3 kb Schema validator for Node.js and the Browsers",
  "main": "./dist/bundle.js",
  "module": "./dist/bundle.js",
  "scripts": {
    "test": "npm run lint && nyc mocha --recursive test/*",
    "test:watch": "mocha --watch",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "minify": "uglifyjs dist/bundle.js -m -o dist/bundle.min.js",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix | snazzy",
    "prepublish": "npm test && npm run build"
  },
  "tags": [
    "specla",
    "validator"
  ],
  "files": [
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Specla/Validator.git"
  },
  "bugs": {
    "url": "https://github.com/Specla/Validator/issues"
  },
  "man": "",
  "author": "Frederik Kvartborg Albertsen",
  "license": "MIT",
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "^7.2.*",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^3.5.*",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "pre-commit": "^1.2.2",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-watch": "^3.2.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.*",
    "uglify-js": "^3.0.13"
  }
}
